# Ví dụ: Tạo file .env với cấu hình mặc định

# =====================================================
# CORS Configuration
# =====================================================
# Cho phép tất cả origins (recommended cho development)
ALLOW_ALL_ORIGINS=true

# Hoặc chỉ định cụ thể các origins được phép (recommended cho production)
# ALLOW_ALL_ORIGINS=false
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# =====================================================
# API Key Authentication
# =====================================================
# Bật/tắt xác thực API key
ENABLE_API_KEY_AUTH=false

# Danh sách API keys (cách nhau bởi dấu phẩy)
# Để tạo API key mới, chạy: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=

# =====================================================
# Rate Limiting
# =====================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =====================================================
# Server Configuration
# =====================================================
HOST=0.0.0.0
PORT=8001
RELOAD=true

# =====================================================
# Ollama Configuration
# =====================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b

# =====================================================
# ChromaDB Configuration
# =====================================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=medical_documents

# =====================================================
# Embedding Model
# =====================================================
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# =====================================================
# LLM Parameters
# =====================================================
TEMPERATURE=0.3
MAX_TOKENS=2048
TOP_P=0.9

# =====================================================
# Retrieval Configuration
# =====================================================
TOP_K_RESULTS=3
SIMILARITY_THRESHOLD=0.7

# =====================================================
# Data Path
# =====================================================
PDF_DATA_PATH=./data
